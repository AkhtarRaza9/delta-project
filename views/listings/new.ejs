<% layout("/layouts/boilerplate") %>


    <div class="row">
        <div class="col-8 offset-2">
            <h3>create a new listings</h3>

            <form method="post" action="/listings" novalidate  class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" id="" placeholder="Add a catchy Title" class="form-control"
                        required>
                        <div class="valid-feedback">Title looks good!</div>
                        <div class="invalid-feedback">Title should be enter valid</div>

                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>

                    <textarea type="text" name="listing[description]" id="" placeholder="Add description"
                        class="form-control" required></textarea>
                        <div class="invalid-feedback">Description should be enter valid</div>

                </div >
                <!-- <div>
                    <label for="image" class="form-label">Upload Listing image</label>

                    <input type="text" name="listing[image]" id="" placeholder="Image url/link" class="form-control"
                        >
                </div> -->
                <div class="mb-3">
                    <label for="image" class="form-label">image/ link</label>

                    <input type="file" name="listing[image]" id=""  class="form-control"
                        >required
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">price</label>

                        <input  name="listing[price]" id="" placeholder="RS. 33,000" class="form-control"
                            required>
                            <div class="invalid-feedback">Price should be enter valid</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">country</label>

                        <input type="text" name="listing[country]" id="country" placeholder="India" class="form-control"
                            required>
                            <div class="invalid-feedback">Country should be enter valid</div>

                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">location</label>

                    <input type="text" name="listing[location]" id="" placeholder="Mumbai, Maharashtra"
                        class="form-control" required>
                        <div class="invalid-feedback">Location should be enter valid</div>

                </div>

                <button class="btn btn-dark add-btn">Add</button>
                <br><br>
            </form>
        </div>
    </div>
